		Object f = new Object();
		Object g = new Object();
		Object[] oArr = {a,b,c,d,e,f,g};
		
		testMain(list, w, oArr);
	}

	public static void main(String[] args)
	{
		if (args.length!=0) {
			usage();
		} else {
			runMain();
		}
	}
