		} else if (rand<0.7) {
			
		} else if (rand<0.8) {
			
		} else if (rand<0.9) {
			
		}
		
		list.insertBefore(oArr[0], w);

	}

	/** Method for testing an array of randomly generated
	 *  long integers.
	 *  @arg size the length of the array to be generated.
